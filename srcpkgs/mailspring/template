do_extract() {
	mkdir -p ${DESTDIR}
	ar x ${XBPS_SRCDISTDIR}/${pkgname}-${version}/${pkgname}-${version}-amd64.deb
}

do_install(){
  ls -l ${DESTDIR}
  ls -l
  bsdtar xf data.tar.xz -C ${DESTDIR} --exclude='./control'
  chmod go-w "${DESTDIR}"/usr "${pkgdir}"/usr/bin
  chmod -R go-w "${DESTDIR}"/usr/share
}
